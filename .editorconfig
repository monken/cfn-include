# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.json]
indent_size = 2

[*.sh]
indent_size = 2

[*.(j|t)s]
indent_size = 2
quote_type = single

[*.go]
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4
[*.mk]
indent_style = tab
indent_size = 4

[Jenkinsfile]
indent_size = 4
indent_style = tab
